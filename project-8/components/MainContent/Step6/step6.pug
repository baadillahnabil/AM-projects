          .form-item.pr-0
            input#step6-form__physiotherapy(name='step6-form', type='checkbox')
            label.label(for='step6-form__physiotherapy')
              .image
                include ../../../static/icons/check_white.svg
              p.text Physiotherapy
          .form-item.pl-0
            input#step6-form__endodontic(name='step6-form', type='checkbox')
            label.label(for='step6-form__endodontic')
              .image
                include ../../../static/icons/check_white.svg
              p.text Endodontic
          .form-item.pr-0
            input#step6-form__hearing-aids(name='step6-form', type='checkbox')
            label.label(for='step6-form__hearing-aids')
              .image
                include ../../../static/icons/check_white.svg
              p.text Hearing Aids

        small.form-text.info.d-none Please select at least one of these


