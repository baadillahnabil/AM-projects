  .content
    .title
      p 
        | Great! Thanks 
        span#step3-personName
        | . Please enter your suburb or postcode.

    .form-area
      .image.d-none.d-md-block.d-lg-block.d-xl-block
        include ../../../static/images/aussie.svg

      .form
        .form-group
          label.label(for='step3-form__postcode') Your Postcode
          .input-group#step3-form__postcode
