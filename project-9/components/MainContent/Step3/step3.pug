                include ../../../static/icons/maps-and-flags.svg
            input.form-control(type='text', autofocus)
          small.form-text.info.d-none Please enter a valid postcode from the list

        .button-next
          button#step3-next-button.btn Next
        
        .button-back
          button#step3-back-button.btn
            .button-icon
              include ../../../static/icons/chevron-left.svg
            | Back
